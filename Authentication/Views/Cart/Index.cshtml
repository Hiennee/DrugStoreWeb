@using Authentication.Helper;
@model Cart
@inject IHttpContextAccessor HttpContextAccessor;
@{
    int count = 0;
}
<h1>Giỏ hàng của bạn</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                No.
            </th>
            <th>
                Image
            </th>
            <th>
                Description
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List.Values)
        {
            count++;
            <tr>
                <td>
                    @count
                <td>
                    <img src="~/products/@(item.Id).jpg" width="130" height="80" />
                </td>
                <td>
                        @item.Description
                </td>
                <td>
                        @item.Quantity
                </td>
                <td>
                        @item.NewPrice.ToString("C2")
                </td>
                <td>
                        @item.TotalPrice.ToString("C2")
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" style="text-align:right">Quantity:</th>
            <th>@Model.TotalQuantity</th>
            <th colspan="1" style="text-align:right">Total:</th>
            <th style="color: green">@Model.TotalAmount.ToString("C2")</th>
        </tr>
    </tfoot>
</table>
<a asp-controller="Cart" asp-action="Purchase" class="btn btn-primary">
    <i class="bi bi-cart"></i>
    Đặt hàng
</a>