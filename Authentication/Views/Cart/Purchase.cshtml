@using Authentication.Helper
@model Cart
@{
    int count = 0;
}
<h1>Giỏ hàng của bạn</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                No.
            </th>
            <th>
                Image
            </th>
            <th>
                Description
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List.Values)
        {
            count++;
            <tr>
                <td>
                    @count
                <td>
                    <img src="~/products/@(item.Id).jpg" width="20" />
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.NewPrice.ToString("C2")
                </td>
                <td>
                    @item.TotalPrice.ToString("C2")
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" style="text-align:right">Quantity:</th>
            <th>@Model.TotalQuantity</th>
            <th colspan="1" style="text-align:right">Total:</th>
            <th style="color: green">@Model.TotalAmount.ToString("C2")</th>
        </tr>
    </tfoot>
</table>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Purchase" method="post">
            <div class="form-group">
                <p>Nhập ngày đặt hàng (DD)</p>
                <label for="date" class="control-label"></label>
                <input type="number" name="date" class="form-control" />
            </div>
            <div class="form-group">
                <p>Nhập tháng đặt hàng (MM)</p>
                <label for="month" class="control-label"></label>
                <input type="number" name="month" class="form-control" />
            </div>
            <div class="form-group">
                <p>Nhập năm đặt hàng (YYYY)</p>
                <label for="year" class="control-label"></label>
                <input type="number" name="year" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Đặt hàng" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>