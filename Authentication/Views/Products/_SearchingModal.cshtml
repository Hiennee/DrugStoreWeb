<!-- The Modal -->
<div class="modal" id="searchModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title"><i class="bi bi-search"></i> Tìm kiếm sản phẩm</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="categoryId">Category:</label>
                        <select id="categoryId" name="categoryId" class="form-control">
                            <option value="-1">--- All ---</option>
                            <option value="1">Trung dược</option>
                            <option value="2">Tây được</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="description">Tên sản phẩm:</label>
                        <input type="text" class="form-control" id="description" name="description" placeholder="Nhập tên sản phẩm">
                    </div>
                    <div class="form-group">
                        <label for="fromPrice">Từ:</label>
                        <input type="text" class="form-control" id="fromPrice" name="fromPrice" placeholder="Nhập giá tối thiểu">
                    </div>
                    <div class="form-group">
                        <label for="toPrice">Đến:</label>
                        <input type="text" class="form-control" id="toPrice" name="toPrice" placeholder="Nhập giá tối đa">
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" name="op" value="search-do"><i class="bi bi-search"></i> Tìm</button>
                    <button type="submit" class="btn btn-primary" name="op" value="search-clear"><i class="bi bi-x-circle"></i> Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>